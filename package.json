{
  "name": "scalable-todo-app",
  "version": "1.0.0",
  "private": true,
  "description": "A scalable TODO application",
  "scripts": {
    "prepare": "husky",
    "lint": "cd frontend && yarn lint && cd ../backend && yarn lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "docker compose up",
    "build": "cd frontend && yarn build && cd ../backend && yarn build",
    "test": "cd frontend && yarn test && cd ../backend && yarn test",
    "test:run": "cd frontend && yarn test:run && cd ../backend && yarn test:run"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "cd frontend && yarn lint --fix"
    ],
    "backend/**/*.{js,ts,json,md}": [
      "prettier --write",
      "cd backend && yarn lint --fix"
    ],
    "tests/**/*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
